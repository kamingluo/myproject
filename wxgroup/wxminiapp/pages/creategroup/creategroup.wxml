<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">创建群</view>
</cu-custom>


<view class="centered">
  <view class="cu-form-group  shadow shadow-lg bg-white ">
    <view class="title">邀请码</view>
    <input placeholder="请输入邀请码"  maxlength="20"  bindinput="groupcode" ></input>
  </view>
</view>

<view class="centered">
  <view class="cu-form-group  shadow shadow-lg bg-white ">
    <view class="title">群名称</view>
    <input placeholder="请输入群名称"  maxlength="10"  bindinput="groupname" ></input>
  </view>
</view>

<view class='ui_cell'>
  <view class='ui_cell_bd'>群图标上传</view>
  <view class='ui_cell_ft'>不上传则默认分配</view>
</view>
<view class="centered">
  <view class='centered  '>
    <view class='ui_uploader_item' wx:for="{{uploaderList}}" wx:key="{{index}}">
      <icon class='ui_uploader_item_icon' bindtap='clearImg' data-index="{{index}}" type="clear" size="20" color="red" />
      <image bindtap='showImg' data-index="{{index}}" src='{{item}}'></image>
    </view>
    <view class='ui_uploader' bindtap='upload' wx:if="{{showUpload}}"></view>
  </view>
</view>





<!-- 文件上传 -->
<view class='domes_title_1' bindtap='moredata'>群简介</view>
<view class="centered">
  <view class="task_text">
    <textarea maxlength="250" bindinput="grouptext" placeholder="请输入群简介描述"></textarea>
  </view>
</view>





<view class='sumittask centered'>
  <button bindtap="sumittask" class="bg-blue">创建群</button>
</view>



<view class='cu-load load-modal'  wx:if="{{loadModal}}">
  <view class='cuIcon-loading2 text-orange'></view>
  <view class='gray-text'>创建中...</view>
</view>
