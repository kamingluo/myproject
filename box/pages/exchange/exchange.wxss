.score{
  margin-bottom: 8rpx;
  height: 100rpx;
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  text-align: center;
  align-items:center;
 
}
.score_text{
  display: flex;
  align-items:center;
  font-size: 44rpx;
}

.score_text image{
  height: 60rpx;
  width: 60rpx;
}





.alipay_view{
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.alipay{
  border-bottom: 3rpx solid #adadad;
  margin-top: 45rpx;
  font-size: 40rpx;
}
.alipay input{
  height: 70rpx;
}




.tips{
  margin-bottom: 20rpx;
  margin-top: 50rpx;
}

.tips text {
  font-size: 40rpx;
}



.top{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  margin-top: 20rpx;
  
}
.cash_top{
  box-shadow: 1px 2px 3px 1px #adadad;
