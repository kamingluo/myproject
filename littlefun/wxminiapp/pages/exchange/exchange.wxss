/* pages/exchange/exchange.wxss */

.box {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 96%;
  margin-top: 10rpx;
}

.goods {
  width: 48%;
  height: 520rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column; /**子元素上下排列*/
  justify-content: center;
  align-items: center;
}

.goods-image {
  
  width: 90%;
}

.goods-image image {
  border-radius: 15rpx;
  height: 290rpx;
}

.goods-introduce{
  width: 94%;
  margin-top: 10rpx;
}
.goods-introduce  text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #000000;
  font-weight: 600;
  font-size: 30rpx;
}

.goods-price{
  margin-top: 10rpx;
}
.goods-price image{
  width: 45rpx;
  height: 45rpx;
}

.goods-price text{
  font-size: 30rpx;
  color: red;
  font-weight: 600;

}
.goods-number{
  margin-left: 30rpx;
  font-size: 25rpx;
}


.line{
  margin-top: 5rpx;
  width: 100%;
  height: 1px;
  background-color: #c2c0c0;
}

.exchange{
  margin-top: 10rpx;

}
.exchange image{
  width: 70rpx;
  height: 70rpx;
}
.exchange  text{
  color: #1296db;
  font-weight: 700;
  font-size: 35rpx;

}